<section class="col-6 h-75">
	<h2 class="text-center">Inicia sesión</h2>

	<form action="/api/sessions/login" method="post" class="border border-2 rounded-3 p-3">
		<div class="mb-3">
			<label for="email" class="form-label">Usuario</label>
			<input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
		</div>
		<div class="mb-3">
			<label for="password" class="form-label">Password</label>
			<input type="password" name="password" class="form-control" id="exampleInputPassword1" />
		</div>
		<div class="mb-3 form-check">
			<input type="checkbox" class="form-check-input" id="exampleCheck1" />
			<label class="form-check-label" for="exampleCheck1">Acepto los terminos y condiciones</label>
		</div>
		<button type="submit" class="btn btn-primary col-12 text-center">Iniciar sesión</button>
	</form>
	{{#if message}}
		<p>{{message}}</p>
	{{/if}}

	<hr>
	<p class="text-center">Or</p>
	<hr>
	<div class="col-12 mt-5 text-center d-flex justify-content-around">
		<a href="/api/sessions/github"><i class="fa-brands fa-github fa-2xl fs-1" style="color: #000000;"></i></i></a>
		<a href="/api/sessions/github"><i class="fa-brands fa-facebook fa-2xl fs-1" style="color: #000000;"></i></i></a>
		<a href="/api/sessions/github"><i class="fa-brands fa-google fa-2xl fs-1" style="color: #000000;"></i></i></a>		
	</div>
</section>