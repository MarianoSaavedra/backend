<div class="d-flex flex-wrap w-75 mh-100 m-auto">
	{{#if productos}}
		{{#each productos}}
			<div class="card col-3 h-75 m-2 text-center p-1 border-3 border-dark">
				<img src="https://picsum.photos/150" alt="Imagen Random" class="m-auto rounded-2" />
				<span class="m-0 p-0">Titulo: {{this.title}}</span>-
				<span class="m-0 p-0">Precio: ${{this.price}}</span>
				<span class="m-0 p-0">Descripcion: {{this.description}}</span>
				<span class="m-0 p-0">Categoria: {{this.category}}</span>
				<span class="m-0 p-0">Codigo: {{this.code}}</span>
				<span class="m-0 p-0">Stock: {{this.stock}}</span>
				<button class="m-auto col-4 p-0 mt-1 border-1 bg-success rounded-2">Comprar
				</button>
			</div>
		{{/each}}
		<div class="row col-12 h-25 justify-content-center align-items-center mt-5">
			{{#if this.prevLink}}
				<button class="btn btn-primary col-2 h-25 p-2">
					<a href={{this.prevLink}} class="text-dark fw-bold text-decoration-none">
						Pagina anterior</a></button>
			{{/if}}
			<span class="text-dark col-4 fw-bold fs-4 text-center">Pagina {{this.page}} de {{this.totalPages}}</span>
			{{#if this.nextLink}}
				<button class="btn btn-danger col-2 h-25 p-2">
					<a href={{this.nextLink}} class="text-dark fw-bold text-decoration-none">
						Pagina siguiente</a></button>
			{{/if}}
		</div>
	{{/if}}
</div>